<Window x:Class="_422_Mozgunova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_422_Mozgunova"
        mc:Ignorable="d"
        Title="Практическая работа 1" Height="350" Width="450"
        Closing="CloseWindow">
    <Grid>
        <Image Source="/Image1.png" Stretch="Fill" HorizontalAlignment="Left" Height="117" Margin="19,2,0,0" VerticalAlignment="Top" Width="310"/>

        <Label Content="x:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,117,0,0" FontSize="16" />
        <TextBox Name="input_x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,124,0,0" Width="70" ToolTip="Поле ввода значения x" Height="20" />

        <Label Content="p:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,156,0,0" FontSize="16" />
        <TextBox Name="input_p" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,162,0,0" Width="70" ToolTip="Поле ввода значения p" Height="20" />

        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,211,0,0" Width="83" Click="ButtonCalculator" ToolTip="Кнопка для вычисления результата" Height="25" FontSize="16" />
        <Button Content="Очистить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,248,0,0" Width="83" Click="ButtonClear" ToolTip="Кнопка для очистки значений" Height="25" FontSize="16" />

        <Label Content="f(x):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,182,0,0" FontSize="16" />

        <RadioButton Name="radioSh" Content="sh(x)" IsChecked="True" ToolTip="Гиперболический синус" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,213,0,0" FontSize="14" Width="55" Height="15" />
        <RadioButton Name="radioX2" Content="x^2" ToolTip="Квадрат x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,236,0,0" Width="52" Height="17" FontSize="14" />
        <RadioButton Name="radioExp" Content="e^x" ToolTip="Экспонента x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,258,0,0" Width="52" FontSize="14" />

        <Label Content="Ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,277,0,0" FontSize="16" />
        <TextBox Name="result" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,281,0,0" Width="109" IsReadOnly="True" ToolTip="Окно для отображения результата" Height="24" />
    </Grid>
</Window>
